<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Warna ketika tombol ditekan -->
    <item android:state_pressed="true" android:color="#FF5722" /> <!-- Oranye -->

    <!-- Warna ketika tombol dicentang -->
    <item android:state_checked="true" android:color="#4CAF50" /> <!-- Hijau -->

    <!-- Warna default (tidak dicentang) -->
    <item android:color="#757575" /> <!-- Abu-abu -->
</selector>
